# NPM Configuration for CV-Mindcare Frontend
# Helps resolve optional dependency issues on ARM64 platforms

# Force installation of optional dependencies
optional=true

# Increase timeout for slower ARM64 platforms
fetch-timeout=600000
fetch-retries=5
fetch-retry-mintimeout=20000
fetch-retry-maxtimeout=120000

# Use legacy peer dependency resolution
legacy-peer-deps=false

# Platform-specific settings
# Ensures Rollup native modules are installed correctly
platform=linux
arch=arm64

# Cache settings
cache-min=3600
prefer-online=true
